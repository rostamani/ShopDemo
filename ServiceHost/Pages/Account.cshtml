@page
@model ServiceHost.Pages.AccountModel
@{
    ViewData["Title"] = "ورود و ثبت نام";
}


<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">ورود - ثبت نام</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li><a asp-page="./Index">صفحه اصلی</a></li>
                            <li class="active">ورود - ثبت نام</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6">
                                @if (Model.LoginMessage != null)
                                {
                                    <div class="alert alert-danger">
                                        <p>@Model.LoginMessage</p>
                                    </div>
                                }
                                <form method="post" asp-page-handler="login">
                                    <div class="login-form">
                                        <h4 class="login-title">ورود</h4>
                                        <div class="row">
                                            <div class="col-md-12 col-12">
                                                <label>نام کاربری</label>
                                                <input asp-for="LoginModel.Username" placeholder="نام کاربری">
                                                <span asp-validation-for="LoginModel.Username" class="error"></span>
                                            </div>
                                            <div class="col-12">
                                                <label>کلمه عبور</label>
                                                <input asp-for="LoginModel.Password" placeholder="کلمه عبور">
                                                <span asp-validation-for="LoginModel.Password" class="error"></span>
                                            </div>
                                            @*<div class="col-sm-6">

                                                    <div class="check-box d-inline-block ml-0 ml-md-2">
                                                        <input type="checkbox" id="remember_me">
                                                        <label for="remember_me">Remember me</label>
                                                    </div>

                                                </div>*@

                                            <div class="col-sm-6 text-left text-sm-right">
                                                <a href="#" class="forget-pass-link">کلمه عبور خود را فراموش کرده اید ؟</a>
                                            </div>

                                            <div class="col-md-12">
                                                <button class="register-button">ورود</button>
                                            </div>

                                        </div>
                                    </div>

                                </form>
                            </div>
                            <div class="col-sm-12 col-md-12 col-lg-6 col-xs-12">
                                @if (Model.RegisterMessage != null)
                                {
                                    <div class="alert alert-danger">
                                        <p>@Model.RegisterMessage</p>
                                    </div>
                                }
                                <form method="post" asp-page-handler="Register">

                                    <div class="login-form">
                                        <h4 class="login-title">ثبت نام</h4>

                                        <div class="row">
                                            <div class="col-md-6 col-12 mb-20">
                                                <label>نام و نام خانوادگی</label>
                                                <input asp-for="RegisterAccount.Fullname" placeholder="نام و نام خانوادگی">
                                                <span asp-validation-for="RegisterAccount.Fullname" class="error"></span>
                                            </div>
                                            <div class="col-md-6 col-12 mb-20">
                                                <label>نام کاربری</label>
                                                <input asp-for="RegisterAccount.Username" placeholder="نام کاربری">
                                                <span asp-validation-for="RegisterAccount.Username" class="error"></span>
                                            </div>
                                            <div class="col-md-12 mb-20">
                                                <label>موبایل</label>
                                                <input asp-for="RegisterAccount.Mobile" placeholder="موبایل">
                                                <span asp-validation-for="RegisterAccount.Mobile" class="error"></span>
                                            </div>
                                            <div class="col-md-6 mb-20">
                                                <label>کلمه عبور</label>
                                                <input asp-for="RegisterAccount.Password" placeholder="کلمه عبور">
                                                <span asp-validation-for="RegisterAccount.Password" class="error"></span>
                                            </div>
                                            <div class="col-md-6 mb-20">
                                                <label>تایید کلمه عبور</label>
                                                <input asp-for="RegisterAccount.ConfirmPassword" placeholder="تایید کلمه عبور">
                                                <span asp-validation-for="RegisterAccount.ConfirmPassword" class="error"></span>
                                            </div>
                                            <div class="col-12">
                                                <button class="register-button mt-0">ثبت نام</button>
                                            </div>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}